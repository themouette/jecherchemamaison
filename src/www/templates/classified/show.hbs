<div class="small-9 columns">
    <h3 class="classified-title">{{name}}</h3>
    <div>{{desc}}</div>
</div>
<div class="small-3 columns text-right">
    <h3>{{price}} €</h3>
    <p>
        <a href="{{this.link}}" target="_blank">Voir sur le site</a>
    </p>
    <ul class="no-bullet">
        <li>Surface: {{surface}} m2</li>
        <li>Etage: {{etage}}</li>
    </ul>
    <ul class="no-bullet">
        <li>Charges: {{charges}} € / mois</li>
        <li>Foncier: {{taxe_foncier}} € / an</li>
        <li>habitation: {{taxe_habitation}} € / an</li>
    </ul>
    <ul class="side-nav">
        <li>
            {{linkTo "Retour à la liste" "classifieds"}}
        </li>
        <li>
            {{linkTo "Editer" "classifieds/" id "/edit"}}
        </li>
        <li>
            {{#linkToEvent "foo:bar"}}
                Envoyer un message
            {{/linkToEvent}}
        </li>
    </ul>
</div>
