{
    // This is the main dev task.
    // As most of process are live, we need to use grunt-concurrent.
    "dev": {
        "options": {
            // As many processes as there is
            "limit": 4,
            // Log tasks output
            "logConcurrentOutput": true
        },
        // Task to run concurrently
        "tasks": ["app:dev", "style:dev", "templates:dev", "velocity:dev"]
    },
    "dev-serve": {
        "options": {
            // As many processes as there is
            "limit": 5,
            // Log tasks output
            "logConcurrentOutput": true
        },
        // Task to run concurrently
        "tasks": ["serve:dev", "app:dev", "style:dev", "templates:dev", "velocity:dev"]
    }
}
